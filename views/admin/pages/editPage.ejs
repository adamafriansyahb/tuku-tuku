<%- include('../../partials/adminHeader') %>
    
<div class="row mt-3">
    <h1>Edit <%= title %> page</h1>

    <form action="/admin/pages/<%= id %>?_method=PUT" method="POST">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input name="title" type="text" class="form-control" id="title" placeholder="Insert title here..." value="<%= title %>">
        </div>
        <div class="mb-3">
            <label for="slug" class="form-label">Slug</label>
            <input name="slug" type="text" class="form-control" id="slug" placeholder="Insert slug here..." value="<%= slug %>">
        </div>
        <div class="mb-3">
            <label for="content" class="form-label">Content</label>
            <textarea name="content" class="form-control" id="ta" rows="3" placeholder="Insert content here..."><%= content %></textarea>
        </div>
        <button class="btn btn-primary" type="submit">Submit</button>
    </form>
</div>

<%- include('../../partials/adminFooter') %> 