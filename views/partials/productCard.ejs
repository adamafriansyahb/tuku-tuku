<div class="row mt-3">
    <% products.forEach((product) => { %>
        <div class="col-6 col-md-4 col-sm-4 col-lg-3 mb-2">
            <a href="/products/<%= product.category %>/<%= product.slug %>">
                <div class="card product-card">
                    <img src="/img/products/<%= product.id %>/<%= product.image %>" class="product-img-thumb">
                    <div class="card-body">
                      <h5 class="card-title product-title"><%= product.title %></h5>
                      <p class="card-text">$<%= parseFloat(product.price).toFixed(2) %></p>
                    </div>
                </div>
            </a>
        </div>
    <% }) %> 
</div>