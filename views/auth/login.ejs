<%- include('../partials/header') %>

<div class="container container-login d-flex justify-content-center align-items-center">
    <div class="container container-login-inner p-3 rounded">
      <%- messages('./partials/messages', locals) %> 
      <h2 class="text-center">Login</h2>
      <form action="/users/login" method="POST">
          <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input name="username" type="username" class="form-control" id="username">
          </div>
          <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input name="password" type="password" class="form-control" id="password">
          </div>
          <button type="submit" class="btn btn-primary w-100 mb-3">Login</button>
          <div class="d-flex justify-content-center">
              <p class="mb-1">Don't have account?<a class="have-account" href="/users/register"> Create Account</a></p>
          </div>
      </form>
    </div>
</div>

<%- include('../partials/footer') %> 