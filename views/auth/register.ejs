<%- include('../partials/header') %>

<div class="container container-login d-flex justify-content-center align-items-center">
    <div class="container container-login-inner p-3 rounded">
        <%- include('../partials/errorMessages') %> 
        <h2 class="text-center">Register</h2>
        <form action="/users/register" method="POST">
            <div class="mb-3">
              <label for="name" class="form-label">Name</label>
              <input name="name" type="name" class="form-control" id="name">
            </div>
            <div class="mb-3">
              <label for="email" class="form-label">Email</label>
              <input name="email" type="text" class="form-control" id="email">
            </div>
            <div class="mb-3">
              <label for="username" class="form-label">Username</label>
              <input name="username" type="username" class="form-control" id="username">
            </div>
            <div class="mb-3">
              <label for="password1" class="form-label">Password</label>
              <input name="password1" type="password" class="form-control" id="password1">
            </div>
            <div class="mb-3">
              <label for="password2" class="form-label">Confirm Password</label>
              <input name="password2" type="password" class="form-control" id="password2">
            </div>
            <button type="submit" class="btn btn-primary w-100 mb-3">Register</button>
            <div class="d-flex justify-content-center">
                <p class="mb-1">Already have account?<a class="have-account" href="/users/login"> Login</a></p>
            </div>
        </form>
    </div>
</div>

<%- include('../partials/footer') %> 