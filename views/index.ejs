<%- include('./partials/header') %>
<%- include('./partials/userNavbar') %>

    <h1 class="text-center">Welcome to tuku-tuku</h1> 
    <h4 class="text-center">What are you looking for?</h4> 
 
    <div class="row d-flex justify-content-center my-5">
        <% categories.forEach((c) => { %>
            <div class="col-6 col-lg-3 mb-2">
                <a href="/products/<%= c.slug %>">
                    <div class="card product-card">
                        <div class="card-body">
                        <h5 class="card-text text-center"><%= c.title %> </h5>
                        </div>
                    </div>
                </a>
            </div>
        <% }) %> 
    </div>

    <br>
    <div class="row mb-5">
        <h1 class="mb-5 text-center">Some of our products</h1>
        <% products.forEach((product) => { %>
            <div class="col-6 col-lg-2 mb-3">
                <a href="/products/<%= product.category %>/<%= product.slug %>">
                    <div class="card product-card">
                        <img src="/img/products/<%= product.id %>/<%= product.image %>" class="product-img-thumb">
                        <div class="card-body">
                          <h5 class="card-title product-title"><%= product.title %></h5>
                          <p class="card-text">$<%= parseFloat(product.price).toFixed(2) %></p>
                        </div>
                    </div>
                </a>
            </div>
        <% }) %> 
        
        <div class="text-center mt-4">
            <a href="/products" class="btn btn-outline-primary"><b>See all products</b></a>
        </div>
    </div>
    


    
    

<%- include('./partials/footer') %> 